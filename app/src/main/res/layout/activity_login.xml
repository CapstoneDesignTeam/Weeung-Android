<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context="com.plass.computer.pplas_project.Login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:src="@drawable/welogo2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/userType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="20sp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/patientType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:buttonTint="@color/clickedColor"
                    android:checked="true"
                    android:fontFamily="sans-serif-black"
                    android:text="Patient"
                    android:textColor="@color/editTextColor1"
                    android:textColorHighlight="@color/editTextColor2"
                    android:textColorLink="@color/colorWhite"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/adminType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/clickedColor"
                    android:fontFamily="sans-serif-black"
                    android:text="Admin"
                    android:textColor="@color/editTextColor1"
                    android:textColorHighlight="@color/editTextColor2"
                    android:textStyle="bold" />

            </RadioGroup>

            <EditText
                android:id="@+id/userID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:layout_weight="1"
                android:width="300sp"
                android:background="@drawable/edit_text"
                android:hint="ID"
                android:fontFamily="sans-serif-black"
                android:inputType="textPersonName"
                android:singleLine="false"
                android:textColor="@color/editTextColor1"
                android:textColorHighlight="#FFD2D2"
                android:textColorHint="@color/editTextColor1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/userPW"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:width="300sp"
                android:background="@drawable/edit_text"
                android:ems="10"
                android:hint="Password"
                android:fontFamily="sans-serif-black"
                android:inputType="textPassword"
                android:textColor="@color/editTextColor1"
                android:textColorHighlight="#FFD2D2"
                android:textColorHint="@color/editTextColor1"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/saveIDCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:buttonTint="@color/clickedColor"
                    android:fontFamily="sans-serif-black"
                    android:text="Save ID"
                    android:textColor="@color/editTextColor1"
                    android:textColorHighlight="@color/editTextColor2"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/loginButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/login_button"
                    android:text="Login"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/editTextColor1"
                    android:textColorHighlight="#FFD2D2"
                    android:textColorHint="@color/editTextColor1"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
